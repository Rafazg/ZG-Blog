<%= stylesheet_link_tag('layout/posts_layouts') %>

<div id="<%= dom_id post %>" class="post-content">
  <h3><%= post.title %></h3>

  <p>
    <strong>Resumo:</strong>
    <%= post.resume %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    Data de Criação: <%= post.created_at.strftime('%d/%m/%Y %H:%M:%S') %>
  </p>

  <p>
    Tags: <%= post.tags.map(&:name).join(', ') %>
  </p>

  <p>
    <%= link_to "Show this post", post %>
  </p>
</div>