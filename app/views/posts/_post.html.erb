
  <%= stylesheet_link_tag('layout/posts_layouts') %>
<%= link_to post_path(post) do %>
  <div id="<%= dom_id post %>" class="post-content">

    <h3><%= post.title %></h3>


    <div class="resume-container">
      <p>
        <strong>Resumo:</strong>
        <%= post.resume %>
      </p>
    </div>


    <div class="body-container">
      <p>
        <strong>Body:</strong>
        <%= post.body %>
      </p>
    </div>


    <div class="date-container">
      <p>
        Data de Criação: <%= post.created_at.strftime('%d/%m/%Y') %>
      </p>
    </div>


    <div class="tags-container">
      <p>
        Tags: <%= post.tags.map(&:name).join(', ') %>
      </p>
    </div>


  </div>
<% end %>  





