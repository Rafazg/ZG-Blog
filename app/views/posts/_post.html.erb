<%= stylesheet_link_tag('layout/posts_layouts') %>

<div id="<%= dom_id post %>" class="post-content">

    <h3><%= post.title %></h3>


  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong> Data de Criação:</strong> <%= post.created_at.strftime('%d/%m/%Y %H:%M:%S') %>
  </p>

  <p>
    <%= link_to "Show this post", post %>
  </p>
</div>
