<%= stylesheet_link_tag('layout/home_layout') %>



<div class="container-mid">
    
    
    <div id="posts" class="posts-container">
        <% @posts.each do |post| %>
            <%= render partial: 'posts/post', locals: { post: post } %>
        <% end %>
    </div>
    

</div>

<div class="container-right">
    <div class="icons-profile">
        <img src="https://icongr.am/fontawesome/desktop.svg?size=30&color=72bada" alt="">
        <p>Aprenda mais sobre desenvolvimento web, programação, tecnologia e Cyber Security. Aqui falamos de Ruby, C#, DotNET e muito mais.</p>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
crossorigin="anonymous"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).on("click", ".tag-link", function(e) {
      e.preventDefault();
      var url = $(this).attr("href");
   
      $.ajax({
        url: url,
        dataType: "script",
        success: function() {
          console.log("Posts carregados com sucesso!");
        },
        error: function() {
          console.error("Erro ao carregar os posts.");
        }
      });
    });
  </script>

